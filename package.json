{
  "name": "cpp-package-manager",
  "version": "1.0.0",
  "description": "Package manager for Cpp.",
  "scripts": {
    "init": "tsc && node bin/index.js init",
    "build": "tsc --outDir bin",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "jest --coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "src"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LucasLacerdaCL/cpp-package-manager.git"
  },
  "author": "Lucas Leandro Costa Lacerda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LucasLacerdaCL/cpp-package-manager/issues"
  },
  "homepage": "https://github.com/LucasLacerdaCL/cpp-package-manager#readme",
  "dependencies": {
    "@types/jest": "^23.3.4",
    "chalk": "^2.4.1",
    "figlet": "^1.2.0",
    "inquirer": "^6.2.0",
    "lodash": "^4.17.11",
    "minimist": "^1.2.0",
    "ts-jest": "^23.10.4"
  },
  "devDependencies": {
    "@types/figlet": "^1.2.0",
    "@types/inquirer": "0.0.43",
    "@types/lodash": "^4.14.116",
    "@types/minimist": "^1.2.0",
    "@types/node": "^10.11.4",
    "jest": "^23.6.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "typings": "^2.1.1"
  }
